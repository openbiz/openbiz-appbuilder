{
	"type":"module",
	"app":"test",
	"name":"firstmodule",
	"displayName":"Test App",
	"models":[{
		"name": "Test",
		"collection": "test_testmodule_Test",
		"schema": {
	        "name": {
	        	"type": "String",
	        	"required": true,
	        	"unique": true
	        },
	        "info": {
		        "website": {
		        	"type": "String"
		        },
	            "address": {            
	                "country": {
		        		"type": "String"
		        	},
	                "province": {
		        		"type": "String"
		        	},
	                "city": {
		        		"type": "String"
		        	},
	                "street": {
		        		"type": "String"
		        	},
	                "zipcode": {
		        		"type": "String"
		        	}
	            },
	            "phone": {
	                "countryCode": {
		        		"type": "String"
		        	},
	                "areaCode": {
		        		"type": "Number"
		        	},
	                "number": {
		        		"type": "Number"
		        	}
	            }
			}
		},
		"action":{
			"statics":["statFunc1","statFunc2"],
			"methods":["dynaFunc1","dynaFunc2"]
		}
	}],

	"controllers":[
		{
			"name":"TestController",
			"model":"Test",
			"type":"ModelController",
			"actions":["customFunction"]		
		},
		{
			"name":"TestSubController",
			"model":"Test",
			"path":"info",
			"type":"ModelSubdocController",
			"actions":["customSubFunction"]		
		}
	],

	"routes":{
		"post /test" 	: { 
			"permissions": ["test-info-manage"],
			"action" 	: "TestController.create" 
		},
		"get /test" 	: { 
			"permissions": ["test-info-access"],
			"action" 	: "TestController.getCollection" 
		},
		"put /test/:id" 	: { 
			"permissions": ["test-info-manage"],
			"action" 	: "TestController.update" 
		},
		"delete /test/:id" 	: { 
			"permissions": ["test-info-manage"],
			"action" 	: "TestController.delete" 
		},
		"get /test/:id" : { 
			"permissions": ["test-info-access"],
			"action" 	: "TestController.getItem" 
		}
	},

	"clientModels": [
		{
			"resourceUri":"/test",
			"itemModel":{
				"name":"Test",
				"actions":["testAction","testAction2"]
			},
			"collectionModel":{
				"name":"TestCollection",
				"actions":["testCollectionAction","testCollectionAction2"]
			}			
		}
	],	

	"views":[
		{
			"name":"testListView",
			"displayName":"Test Management",
			"description":"description",
			"permission":"test-info-access"	,
			"type":"gridForm",
			"model":"TestCollection",
			"url":"/tests",
			"fields":[
				{
					"name":"name",
					"field":"name",
					"displayName":"Name",
					"className":"",
					"type":"link",
					"url":"/tests/:id"
				},
				{
					"name":"website",
					"field":"info.website",
					"displayName":"website",
					"className":"hidden-xs"
				},
				{
					"name":"actions",
					"displayName":"Action",
					"type":"recordActions",
					"permission":"test-info-manage"	
				}
			],
			"paginator":true,
			"filter":true,
			"recordActions":[
				{
					"name":"delete",
					"displayName":"Delete",
					"type":"button",
					"event":"click",
					"action":"deleteRecord()",
					"permission":"test-info-manage"	
				}
			],
			"actions":[
				{
					"name":"new",
					"type":"link",
					"url":"/tests/new",
					"permission":"test-info-manage"	
				}
			]
		},
		{
			"name":"testEditView",
			"displayName":"Test Edit",
			"type":"editForm",
			"permission":"test-info-manage"	,
			"model":"Test",
			"url":"/tests/:id/edit",
			"fields":[
				{
					"name":"name",
					"field":"name",
					"className":"",				
					"validation":"",
					"type":"text"
				},
				{
					"name":"website",
					"field":"info.website",
					"className":"hidden-xs",
					"validation":"",
					"type":"textarea"
				},
				{
					"name":"something",
					"field":"info.something",
					"className":"",
					"validation":"",
					"type":"select",
					"dataSource":{
						"type":"model",
						"model":"OtherCollection",
						"path":"account.brands",
						"key":"id",
						"value":"displayName"
					}
				}
			],
			"actions":[
				{
					"name":"saveRecord",
					"className":"",
					"type":"button",
					"event":"click",
					"action":"saveRecord()",
					"gotoURL":"/tests/:id"
				},
				{
					"name":"cancel",
					"className":"",
					"type":"link",
					"url":"/tests"
				}
			]
		},
		{
			"name":"testDetailView",
			"displayName":"Test Detail",
			"type":"detailForm",
			"url":"/tests/:id",
			"model":"Test",
			"fields":[
				{
					"name":"name",
					"field":"name",
					"className":""
				},
				{
					"name":"website",
					"field":"info.website",
					"className":"hidden-xs"
				}
			],
			"actions":[
				{
					"name":"deleteRecord",
					"className":"",
					"type":"button",
					"event":"click",
					"action":"saveRecord",
					"gotoURL":"/tests/:id"
				},
				{
					"name":"back",
					"className":"",
					"type":"link",
					"url":"/tests"
				}
			]		
		},
		{
			"name":"testNewView",
			"displayName":"Create a Test Record",
			"type":"addForm",
			"model":"Test",
			"url":"/tests/new",
			"fields":[
				{
					"name":"name",
					"field":"name",
					"className":""			
				},
				{
					"name":"website",
					"field":"info.website",
					"className":"hidden-xs"
				}
			]
		}
	],

	"roles":[
		{
			"name":"test-manager",
			"displayName":"Test Manager",
			"permissions":[
				"test-info-access",
				"test-info-manage",
				"test-menu-access"
			],
			"isDefault":false
		},
		{
			"name":"test-user",
			"displayName":"Test User",
			"permissions":[
				"test-info-access",	
				"test-menu-access"			
			],
			"isDefault":true
		}]
}