ol.breadcrumb{% for(var i=0;i<BREADCRUMB.length;i++){ var node = BREADCRUMB[i];  %}{% 		if(typeof node.url != 'undefined' && node.url){ %}
	li
		a(href!="{{ node.url }}") <%= breadcrumb.{{node.name}} %>{% 		} else { %}
	li.active <%= breadcrumb.{{node.name}} %>{% 		} %}{% } %}
#content
	.row
		.col-md-12
			.panel-body
				form.(role="form",parsley-validate,novalidate="novalidate"){% for(var i=0;i<FORM_FIELDS.length;i++){var field = FORM_FIELDS[i];switch(field.type){%}
					{%case 'text':{%}
					.form-group
						input.form-control(name="{{field.selector}}",type=)
					{%break;}%}
					{%}%}{%}%}
					.form-group
						label Company Name
						input.form-control(name="name",required,parsley-mincheck="3",type="text",placeholder="Company Name",value!="<%= account.get('name') %>",parsley-remote-method="POST",parsley-remote-message!="<%= validation.companyNotUnique %>")
					.form-group
						label Phone Number
						input.form-control.pull-left(name="phone-country-code",required,placeholder!="<%= phoneCountryCode %>",value!="<%= account.get('info').phone.countryCode %>",style="width:19%;margin-right:1%;")
						input.form-control.pull-left(name="phone-area-code",required,placeholder!="<%= phoneAreaCode %>",value!="<%= account.get('info').phone.areaCode %>",style="width:24%;margin-right:1%;")
						input.form-control.pull-left(name="phone-number",required,type="tel",placeholder!="<%= phoneNumber %>",value!="<%= account.get('info').phone.number %>",style="width:55%")
					.form-group
						label Address
						input.form-control.pull-left(name="address-country",parsley-mincheck="2",required,placeholder!="<%= addressCountry %>",value!="<%= account.get('info').address.country %>",style="width:32%;margin-right:1%;")
						input.form-control.pull-left(name="address-province",parsley-mincheck="2",required,placeholder!="<%= addressProvince %>",value!="<%= account.get('info').address.province %>",style="width:33%;margin-right:1%;")
						input.form-control.pull-left(name="address-city",parsley-mincheck="2",required,placeholder!="<%= addressCity %>",value!="<%= account.get('info').address.city %>",style="width:33%")
						input.form-control.pull-left(name="address-street",parsley-mincheck="6",required,placeholder!="<%= addressStreet %>",value!="<%= account.get('info').address.street %>",style="width:74%;margin-right:1%;")
						input.form-control.pull-left(name="address-zipcode",required,parsley-type="digits",placeholder!="<%= addressZipcode %>",value!="<%= account.get('info').address.zipcode %>",style="width:25%")
					.form-group
						label Website
						input.form-control(name="website",type="url",placeholder="http://www.yourcompany.com",value!="<%= account.get('info').website %>")
			.panel-footer
					button.btn-save.btn.btn-theme(type="submit")
						i.fa.fa-check
						| &nbsp; Save &nbsp;